<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp">



    <RelativeLayout
        android:id="@+id/rl_satu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@android:drawable/screen_background_dark_transparent">

            <ImageView
                android:id="@+id/iv_itemfoto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/cilember"
                android:scaleType="fitXY" />

        </FrameLayout>


        <ImageView
            android:id="@+id/iv_itempanah"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_itemjudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curug cilember mengalami peningkatan pengunjung yang signifikan"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/iv_itempanah"
            android:layout_marginRight="20dp"
            android:layout_alignParentLeft="true"/>

        <RelativeLayout
            android:id="@+id/rl_tanggalsatu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:src="@drawable/rounded"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/tv_itemtanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 oktober 2017"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:paddingLeft="10dp" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
